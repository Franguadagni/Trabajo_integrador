<%- include('./partials/head') %>
<%- include('./partials/header') %>
<!-- Banner -->
<div class="banner">
    <!-- <img src="/images/banner.webp" alt="Banner de ofertas"> -->
</div>
<!-- /Banner -->
<!-- Novedades -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Novedades</h2>
        </div>
        <!-- Show the "ultimos" products -->
        <% for(let i = 0; i<8 ; i++){ %> 
        <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
                <a href="/productos/detalle/<%-productos[i].id%>"> 
                    <figure class="product-box_image">
                        <img src="<%=productos[i].image%>" alt="imagen <%=productos[i].nombre%>">
                    </figure>
                    <article class="product-box_data">
                        <h2><%= productos[i].nombre %></h2>
                        <p><%= productos[i].descripcion %></p>
                        <p>Usuario:<a href="/users/profile"><%= productos[i].productos_usuarios.nombre %></a></p>
                    </article>
                </a>
            </section>
        </div>
        <% } %>
    </div>
</div>
<!-- /Novedades -->
<!-- Más comentados -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Más comentados</h2>
        </div>
        <!-- Show the "ultimos" products -->
        <% for(let i = 6; i<productos.length ; i++){ %> 
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/productos/detalle/<%-productos[i].id%>"> 
                        <figure class="product-box_image">
                            <img src="<%= productos[i].image %>" alt="imagen <%=productos[i].nombre%>">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= productos[i].nombre %></h2>
                            <p><%= productos[i].descripcion %></p>
                            <p>Usuario: <a href="/users/profile"><%= productos[i].productos_usuarios.nombre %></a></p>
                        </article>
                    </a>
                </section>
            </div>
        <% } %>
    </div>
</div>
<!-- /Más comentados -->
<%- include('./partials/footer') %>